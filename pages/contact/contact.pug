block mixins 
	include ../../views/base/mixins
doctype html
head
	meta(charset='UTF-8')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')
	meta(name='viewport' content='width=device-width, initial-scale=1.0')
	link(rel='preconnect' href='https://fonts.googleapis.com')
	link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
	link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap' 
	rel='stylesheet')
	link(rel='stylesheet' href='../../css/app.css')
	link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
	title Document
body 
	.app 
		+navigation([
			{
				display: 'Home',
				path:'../../index.html'
			},
			{
				display: 'About us',
				path:'../about/about.html'
			},
			{
				display: 'Features',
				path:'../feature/feature.html'
			},
			{
				display: 'Pricing',
				path:'../pricing/pricing.html'
			},
			{
				display: 'Work',
				path:'../work/work.html'
			},
			{
				display: 'Blog',
				path:'../blog/blog.html'
			},
		],'./contact.html')
		.contact 
			.wrapper 
				.contact-header 
					h2.global-heading.global-heading--medium.contact-heading Contact Us
					p.global-desc.contact-desc Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.
				form.form
					.form-group
						+fromInput('Name','Enter your name','text')
						+fromInput('Email','Enter your email','email')
					.form-group
						+fromInput('Provide','Provide context','text')
						+fromInput('Subject','Select Subject','text')
					.form-textarea
						label Message 
						textarea(name='question' cols='30' rows='10' placeholder='Write your  question here')
					button.button.button-gray--primary.form-button Send Messege
		+toTop
		include ../../views/base/footer	
	script 
		include ../../main.js	 
