		.template-content
			a(href='../../pages/template/template-detail.html')  
				h3.template-title= title
			p.global-desc.template-text= text
			a.global-view.template-view(href='../../pages/template/template-detail.html')
				span View Portfolio
				img(src='../../image/arrow-right-black.svg') 

mixin fromInput(label,placeholder,type)
	.form-input
		label= label 
		input(type= type, placeholder= placeholder)

mixin templateBodyBlock(title,desc,list)
	.template-body-block 
		h2.global-heading.global-heading--small.template-body-title= title
		p.global-desc.template-body-desc= desc
		ul.template-body-list
			each item in list
				li.template-body-item= item

mixin toTop()
	.to-top(id='to-top')
		i.fas.fa-arrow-alt-circle-up
			