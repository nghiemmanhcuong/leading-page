mixin teamItem(image,name,jobPosition)
	article.team-item 
		.team-image 
			img(src= image)
			.team-info 
				a(href='#!') 
					img(src='../../image/facebook-icon.svg') 
				a(href='#!') 
					img(src='../../image/twitter-icon.svg') 
				a(href='#!') 
					img(src='../../image/linkedln-icon.svg') 
		.team-information
			a(href='#!') 
				h3.team-name= name 
			span.global-desc= jobPosition

mixin packageItem(price,name,title,text,permissions = [],btnText)
	article.package-item
		.package-hero 
			span.package-price= price
			span.package-name= name
		.package-content 
			h4.package-title= title 
			p.global-desc.package-text= text
		ul.package-permissions
			each permission in permissions
				li.package-permission 
					img(src='../../image/pricing-icon.svg')
					span= permission
		.package-button
			a.button.button-gray--primary(href='#!')= btnText

