mixin header(image,heading,desc,buttonText,navigation,contactPath)
	header.header 
		.wrapper
			+navigation(navigation,contactPath)
			.home-hero 
				.home-hero-content 
					h2.global-heading.global-heading--big.home-hero-heading= heading
					p.global-desc.home-hero-desc= desc
					.home-hero-view
						if buttonText === 'View our work' 
							a.button.button-yelow--light.home-hero-button(href= navigation[4].path)= buttonText
						else
							a.button.button-yelow--light.home-hero-button(href= navigation[3].path)= buttonText
						a.global-view.home-hero-pricing(href= navigation[3].path)
							span View Pricing
							img(src='../../image/arrow-right.svg')
				.home-hero-image 
					img(src= image)

mixin navigation(props,contactPath)
	.navigation
		.wrapper.navigation-container
			.navigation-bar(id='header-show')
				i.fas.fa-bars
			a.logo(href= props[0].path)
				img.logo-image(src='../../image/logo.png')
			nav.menu
				ul.menu-list 
					each item in props
						li.menu-item
							a.menu-link(href= item.path, class= item.active)= item.display
			.contact-us
				a.contact-us-icon(href= contactPath)
					i.fas.fa-envelope 
				a.button.button-outline(href= contactPath) Contact us

mixin jobItem(image,title,text)
	article.job-item 
		.job-number 
			img(src= image)
		h3.job-title= title
		p.global-desc.job-text= text

mixin featureItem(icon,title,text)
	article.feature-item 
		.feature-icon 
			img(src= icon)
		.feature-title= title
		.global-desc.feature-text= text

mixin accordionItem(number,title,text)
	article.accordion-item
		span.accordion-number= number
		.accordion-container 
			.accordion-header 
				span= title
				span.accordion-toggle
					i.fas.fa-plus
			.accordion-body= text

mixin blogItem(image,date,title,text)
	article.blog-item 
		a.blog-image(href='../../pages/blog-detail/blog-detail.html')
			img(src= image)
		.blog-content
			span.global-desc.blog-date= date
			a(href='../../pages/blog-detail/blog-detail.html')
				h4.blog-title= title
			p.global-desc.blog-text= text
			a.global-view.blog-more(href='../../pages/blog-detail/blog-detail.html')
				span Read More
				img(src='../../image/arrow-right-black.svg')

mixin processItem(title,text)
	.process-item 
		.process-line 
			.process-circle 
			.process-indicator 
		.process-content 
			h3.process-title= title
			p.global-desc.process-text= text

